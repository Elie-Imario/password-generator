<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Generator with NestJS</title>
    <link rel="stylesheet" href="css/styles.min.css">
    <link rel="stylesheet" href="vendor/fontawesome-free-6.1.1-web/css/all.min.css">
    <link rel="stylesheet" href="vendor/fontawesome-free-6.1.1-web/css/fontawesome.min.css">
</head>
<body>
    <div class="app">
        <div class="bloc-page">
            <div class="bloc-container">
                <div class="form-container">
                    <div class="title-lead">
                        <span>Password Generator</span>
                    </div>
                    <div class="form-body">
                        <div class="form-group bg-dark">
                            <span class="generated-pass" id="GP"></span>
                            <span class="ico">
                                <i class="fa fa-clipboard"></i>
                                <i class="fa fa-clipboard-check hide"></i>
                            </span>
                        </div>
    
                        <div class="form-group">
                            <label for="password-length">Password length *</label>
                            <input type="text" name="password-length" class="form-control" id="password-length">
                        </div>
                        <div class="form-group">
                            <label for="enable-uppercase">Include uppercase letters</label>
                            <input type="checkbox" name="enable-uppercase" id="enable-uppercase">
                        </div>
                        <div class="form-group">
                            <label for="enable-lowercase">Include lowercase letters</label>
                            <input type="checkbox" name="enable-lowercase" id="enable-lowercase">
                        </div>
                        <div class="form-group">
                            <label for="enable-number">Include numbers</label>
                            <input type="checkbox" name="enable-number" id="enable-number">
                        </div>
                        <div class="form-group">
                            <label for="enable-symbol">Include symbols</label>
                            <input type="checkbox" name="enable-symbol" id="enable-symbol">
                        </div>
    
                        <div class="btn-group">
                            <button type="button" class="btn">Generate password</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="script/index.js" type="text/javascript"></script>
</body>
</html>